{
    "compilerOptions": {
      "target": "es2022",            // Modern features
      "module": "commonjs",          // Node.js module system
      "rootDir": "./src",            // Source files
      "outDir": "./dist",            // Output files
      "strict": true,                // Strict type-checking
      "esModuleInterop": true,       // Ensure compatibility with CommonJS modules like express
      "forceConsistentCasingInFileNames": true, // Prevent import casing mismatches
      "skipLibCheck": true,          // Ignore type declaration file checks
      "resolveJsonModule": true      // Allow importing JSON files directly
    },
    "include": ["src/**/*"],         // Include all TypeScript files in src/
    "exclude": ["node_modules"]      // Exclude node_modules
  }
  